# .env.example
# Example environment variables
# Copy this file to .env and fill in the values
# Make sure to never commit .env to git

# Database connection string (SQLite example)
DATABASE_URL="file:./dev.db"

# AugmentOS TPA Configuration
AUGMENTOS_PACKAGE_NAME="" # Your unique package name from console.augmentos.org
AUGMENTOS_API_KEY=""      # Your API key from console.augmentos.org

# JWT Configuration
JWT_SECRET=""             # A strong, random secret for signing tokens (at least 32 characters recommended)
TOKEN_EXPIRY_SECONDS=3600 # Optional: Token expiry time in seconds (e.g., 3600 for 1 hour)

# Server Configuration
PORT=3000 # Optional: Port the TPA server runs on

# Optional: Enable debug logging for the logger utility
# DEBUG=true 